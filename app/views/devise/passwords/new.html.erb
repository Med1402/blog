<ul class="px-8 py-32  m-auto border-violet-200 h-full bg-violet-200 w-1/2 border-8">
        <h2 class="text-2xl m-auto w-fit font-bold">Forgot your password?</h2><br><br>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field font-bold m-auto w-fit">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div><br><br>

          <div class="actions bg-purple-300 rounded-full px-14 py-2 font-bold m-auto w-fit hover:bg-violet-600 active:bg-violet-700 focus:outline-none focus:ring focus:ring-violet-300">
            <%= f.submit "Send me reset password instructions" %>
          </div>
        <% end %>
        <br>
        <%= render "devise/shared/links" %><br>
</ul>
